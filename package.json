{
  "name": "root",
  "private": true,
  "version": "1.0.0",
  "main": "index.js",
  "workspaces": [
    "packages/hooks",
    "packages/tools",
    "packages/ui"
  ],
  "scripts": {
    "sharp:bug": "cd ./node_modules/sharp && npm run install",
    "prepare": "husky install && chmod ug+x .husky/*",
    "bootstrap": "npm install --force && npm run sharp:bug",
    "develop": "gatsby develop",
    "serve": "gatsby serve",
    "build:site": "cross-env NODE_ENV=production node ./node_modules/gatsby/cli.js build --prefix-paths --verbose",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "build": "lerna run build --parallel"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/samurais-app/diablo.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/samurais-app/diablo/issues"
  },
  "homepage": "https://github.com/samurais-app/diablo#readme",
  "husky": {
    "hooks": {
      "commit-msg": "commitlint .commitlintrc.js -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "packages/**/*.{ts,tsx}": [
      "eslint --ext '.ts,.tsx' --fix",
      "git add"
    ],
    "*.{scss,css}": [
      "stylelint",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-customizable"
    }
  },
  "description": "",
  "dependencies": {
    "@babel/preset-typescript": "^7.21.0",
    "@mdx-js/react": "^2.3.0",
    "babel-plugin-styled-components": "^2.0.7",
    "buffer": "^6.0.3",
    "gatsby": "^5.7.0",
    "gatsby-mdx-render-section": "^0.1.1",
    "gatsby-plugin-google-gtag": "^5.7.0",
    "gatsby-plugin-image": "^3.7.0",
    "gatsby-plugin-manifest": "^5.7.0",
    "gatsby-plugin-mdx": "^5.7.0",
    "gatsby-plugin-page-creator": "^5.7.0",
    "gatsby-plugin-react-helmet": "^6.7.0",
    "gatsby-plugin-remove-serviceworker": "^1.0.0",
    "gatsby-plugin-sharp": "^5.7.0",
    "gatsby-plugin-sitemap": "^6.7.0",
    "gatsby-plugin-styled-components": "^6.7.0",
    "gatsby-plugin-svgr": "^3.0.0-beta.0",
    "gatsby-plugin-typescript": "^5.7.0",
    "gatsby-source-filesystem": "^5.7.0",
    "gatsby-transformer-remark": "^6.7.0",
    "gatsby-transformer-sharp": "^5.7.0",
    "lodash.get": "^4.4.2",
    "path-browserify": "^1.0.1",
    "process": "^0.11.10",
    "re-resizable": "^6.9.9",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-view": "^2.3.7",
    "remarkable": "^2.0.1",
    "remarkable-react": "^1.4.3",
    "stream-browserify": "^3.0.0",
    "styled-components": "^5.3.6"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.0.3",
    "@types/jest": "^29.0.0",
    "@types/node": "^18.14.0",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "@typescript-eslint/eslint-plugin": "^5.30.6",
    "@typescript-eslint/parser": "^5.30.6",
    "conventional-changelog-conventionalcommits": "^5.0.0",
    "cross-env": "^7.0.3",
    "cz-customizable": "^6.9.0",
    "eslint": "^8.19.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^3.5.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^27.0.1",
    "eslint-plugin-prettier": "^4.2.1",
    "gatsby-plugin-tsconfig-paths": "^1.0.6",
    "husky": "^8.0.1",
    "jest": "^28.1.3",
    "jest-canvas-mock": "^2.4.0",
    "jest-environment-jsdom": "^29.0.2",
    "lerna": "^4.0.0",
    "lint-staged": "^13.0.3",
    "rimraf": "^3.0.2",
    "sharp": "^0.31.3",
    "ts-jest": "^28.0.8",
    "typescript": "^4.9.5"
  }
}