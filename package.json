{
  "name": "root",
  "private": true,
  "version": "1.0.0",
  "main": "index.js",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "prepare": "husky install && chmod ug+x .husky/*",
    "bootstrap": "npm install --force",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "build": "lerna run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/samurais-app/diablo.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/samurais-app/diablo/issues"
  },
  "homepage": "https://github.com/samurais-app/diablo#readme",
  "husky": {
    "hooks": {
      "commit-msg": "commitlint .commitlintrc.js -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "packages/**/*.{ts,tsx}": [
      "eslint --ext '.ts,.tsx' --fix",
      "git add"
    ],
    "*.{scss,css}": [
      "stylelint",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-customizable"
    }
  },
  "description": "",
  "devDependencies": {
    "lerna": "^4.0.0",
    "lint-staged": "^13.0.3",
    "rimraf": "^3.0.2",
    "ts-jest": "^28.0.8",
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.0.3",
    "@types/jest": "^29.0.0",
    "@typescript-eslint/eslint-plugin": "^5.30.6",
    "@typescript-eslint/parser": "^5.30.6",
    "conventional-changelog-conventionalcommits": "^5.0.0",
    "cz-customizable": "^6.9.0",
    "eslint": "^8.19.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^3.5.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^27.0.1",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.1",
    "jest": "^28.1.3",
    "jest-canvas-mock": "^2.4.0",
    "jest-environment-jsdom": "^29.0.2"
  }
}